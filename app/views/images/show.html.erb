<% if flash.empty? %>
    <%= image_tag(@image.url) %>
    <br>

    <% if @image.tag_list.present? %>

        <h4>Tag List</h4>
        <ul>
          <% @image.tag_list.each do |tag| %>

              <li><%= tag %></li>

          <% end %>

        </ul>
    <% end %>
<% else %>

    <ul>
      <% flash.each do |msg| %>
          <li>
            <%= msg %>
          </li>
      <% end %>
    </ul>

<% end %>
