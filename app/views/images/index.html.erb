<h1> Images </h1>
<%= button_to "Add new image", new_image_path, method: :get, class: 'js-new_image' %>
<%= button_to "Clear tag", images_path, method: :get, class: 'js-clear_tag' %>
<% stylesheet_link_tag "images.css" %>
<%= render partial:'images/flash' %>
<ul class = "js-image_list">
  <% @images.each do |image| %>
    <li class = "js-image">
      <%= image_tag(image.url, class: 'index-page_image') %>
      <%= link_to "Delete", image_path(image), method: :delete, data: {confirm: 'Are you sure?'}, class: 'js-delete_btn' %>
      <ul>
        <%= render partial: 'images/tag_list', locals: {image: image} %>
      </ul>

    </li>
    <br><br>
  <% end %>
</ul>
